<p id="notice"><%= notice %></p>

<h1>Listing Student Infos</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Student name</th>
      <th>Referenced class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_infos.each do |student_info| %>
      <tr>
        <td><%= student_info.student_id %></td>
        <td><%= student_info.student_name %></td>
        <td><%= student_info.referenced_class_id %></td>
        <td><%= link_to 'Show', student_info %></td>
        <td><%= link_to 'Edit', edit_student_info_path(student_info) %></td>
        <td><%= link_to 'Destroy', student_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

