<p id="notice"><%= notice %></p>
<form action="update" method="post">
<td>
  <strong>Record date:</strong>
  <%= date_field_tag :record_date %>
</td>
<table>
<thead><tr><th>Roll No</th><th>Name</th><th>Is Absent</th></tr></thead>
<tbody>
<% @students.each do |s|%>
<tr>
<td>
  <%= s.student_id %>
</td>

<td>
  <%= s.student_name %>
</td>
<td>
  <%= check_box_tag 's'+s.student_id.to_s%>
</td>
</tr>
<% end %>
</tbody></table>
<%= submit_tag  "Record Attendance"%>
</form>
<p><p>
