<p id="notice"><%= notice %></p>

<h1>Listing Attendence Infos</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Class</th>
      <th>Status</th>
      <th>Record date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendence_infos.each do |attendence_info| %>
      <tr>
        <td><%= attendence_info.student_id %></td>
        <td><%= attendence_info.class_id %></td>
        <td><%= attendence_info.status %></td>
        <td><%= attendence_info.record_date %></td>
        <td><%= link_to 'Show', attendence_info %></td>
        <td><%= link_to 'Edit', edit_attendence_info_path(attendence_info) %></td>
        <td><%= link_to 'Destroy', attendence_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

